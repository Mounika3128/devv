app.py
from flask import Flask
app = Flask(__name__)
@app.route('/')
def home():
 return "Hello from Flask running in Docker!"
if __name__ == "__main__":
 app.run(host="0.0.0.0", port=5000)

dockerfile:
FROM python:3.9-slim
WORKDIR /app
COPY requirements.txt .
RUN pip install -r requirements.txt
COPY . .
EXPOSE 5000
CMD ["python", "app.py"]

requirements.txt
Flask

docker build -t flask-docker-app .
docker run -p 5000:5000 flask-docker-app

docker login
docker tag flask-docker-app yourname/flask-docker-app:local
docker push yourname/flask-docker-app:local
docker run -p 5000:5000 yourname/flask-docker-app:local
